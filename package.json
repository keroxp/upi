{
  "name": "upi",
  "version": "0.0.1",
  "description": "Easy, Simple Package Dependency Manager for Unity3D",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build-ts": "tsc",
    "test": "jest --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keroxp/upi.git"
  },
  "author": "Yusuke Sakurai <kerokerokerop@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keroxp/upi/issues"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "mapCoverage": true,
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/**/__tests__/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  },
  "homepage": "https://github.com/keroxp/upi#readme",
  "dependencies": {
    "caporal": "^0.9.0",
    "child-process-promise": "^2.2.1",
    "coffee-script": "^1.12.7",
    "compare-versions": "^3.1.0",
    "content-disposition": "^0.5.2",
    "debug": "^3.1.0",
    "fs-extra": "^5.0.0",
    "glob-promise": "^3.3.0",
    "jasmine": "^2.8.0",
    "mz": "^2.7.0",
    "parse-github-url": "^1.0.2",
    "tar": "^4.2.0",
    "unzip-stream": "^0.2.2",
    "util": "^0.10.3"
  },
  "devDependencies": {
    "@types/download": "^6.2.1",
    "@types/express": "^4.11.0",
    "@types/fs-extra": "^5.0.0",
    "@types/jest": "^22.0.1",
    "@types/mz": "0.0.32",
    "express": "^4.16.2",
    "jest": "^22.0.6",
    "serve-static": "^1.13.1",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  }
}
